<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">

    <TextView
        android:id="@+id/login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:textSize="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/login2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome!"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/name"
        android:layout_width="286dp"
        android:layout_height="52dp"
        android:layout_below="@id/login2"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:background="@color/design_default_color_background"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:hint="N a m e"
        android:letterSpacing=".3"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:textColor="#090909"
        android:textColorHint="#6A050505" />

    <EditText
        android:id="@+id/carreg"
        android:layout_width="286dp"
        android:layout_height="52dp"
        android:layout_below="@id/name"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:hint="Car Registration"
        android:letterSpacing=".3"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:textColor="#070707"
        android:textColorHint="#6A090808" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="286dp"
        android:layout_height="52dp"
        android:layout_below="@id/carreg"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:hint="Phone Number"
        android:letterSpacing=".3"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:textColor="#020202"
        android:textColorHint="#6A100F0F" />

    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="286dp"
        android:layout_height="52dp"
        android:layout_below="@id/phone"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:hint="Email"
        android:letterSpacing=".3"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        android:textColor="#090909"
        android:textColorHint="#6A0C0C0C" />


    <EditText
        android:id="@+id/password"
        android:layout_width="286dp"
        android:layout_height="49dp"
        android:layout_below="@+id/edittext_email"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:hint="Password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:letterSpacing=".3"
        android:selectAllOnFocus="true"
        android:textColor="#0B0A0A"
        android:textColorHint="#6A131313" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="64dp"
        android:text="Sign Up"
        android:layout_marginLeft="74dp"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/bottomtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account ? "
        android:textStyle="italic"
        android:layout_marginTop="-20dp"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_below="@id/signupbtn"
        />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupbtn"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="-33dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#00FEFAFD"
        android:clickable="true"
        android:text="Login"
        android:textColor="#673AB7"
        android:textColorHighlight="#9C27B0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="395dp"
        android:layout_height="312dp"
        android:layout_marginTop="-110dp"
        app:srcCompat="@drawable/virah1" />

</RelativeLayout>
